{
  "version": 2,
  "builds": [
    { "src": "./backend/server.js", "use": "@vercel/node" },
    { "src": "./frontend/build", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/frontend/build/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build"
    }
  ]
}
