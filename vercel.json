{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/static-build" },
      { "src": "backend/package.json", "use": "@vercel/node" }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/api/(.*)", "dest": "backend/server.js" },
      { "src": "/(.*)", "dest": "frontend/build/index.html" }
    ]
  }
  